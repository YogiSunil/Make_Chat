<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Make Chat - Modern Team Communication</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script src="/public/index.js"></script>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css'></link>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href='/public/index.css' rel='stylesheet' type='text/css'></link>
  </head>
  <body>

    <form class="username-form">
      <h2>Welcome to Make Chat</h2>
      <p style="color: #7f8c8d; margin-bottom: 25px; text-align: center;">Enter your username to join the conversation</p>
      <input id="username-input" placeholder="Enter your username"></input>
      <button id="create-user-btn">Join Chat</button>
    </form>

    <div class="main-container">
      <div class="channels-and-users-online-container">
        <h1 class="brand">Make Chat</h1>
        <div class="channels">
            <h2 class="channels-label">Channels</h2>
            <div class="new-channel-form">
              <input id="new-channel-input" placeholder="New Channel" />
              <button id="new-channel-btn">Create Public</button>
              <button id="new-private-channel-btn" style="margin-left: 5px; font-size: 12px;">Private</button>
            </div>
            <div class="channel-current">General</div>
        </div>
        <h2>Online Users</h2>
        <div class="users-online"></div>
        <div class="private-messages">
          <h3 style="margin-left: 8px; font-size: 16px;">Private Chats</h3>
          <div class="private-chats-list"></div>
        </div>
        <button id="logout-btn" style="margin: 10px 8px; padding: 5px 10px; background-color: #dc3545; color: white; border: none; border-radius: 3px; cursor: pointer;">Logout</button>
      </div>
      <div class="chat-container">
        <div class="chat-container-fluid">
          <div class="message-container">
              <h2>Messages</h2>
          </div>
          <div class="text-chat-divide"></div>
          <div class="chat-box"><textarea id="chat-input" placeholder="Type a message"></textarea><button class="btn" id="send-chat-btn">Send</button></div>
        </div>
      </div>
    </div>


    <!-- Channel Creation Modal -->
    <div id="channel-modal" class="modal" style="display: none;">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Create New Channel</h3>
          <span class="close">&times;</span>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="modal-channel-name">Channel Name:</label>
            <input type="text" id="modal-channel-name" placeholder="Enter channel name" />
          </div>
          <div class="form-group">
            <label>Invite Members:</label>
            <div class="members-selection">
              <div class="available-users">
                <h4>Available Users</h4>
                <div id="available-users-list" class="users-list"></div>
              </div>
              <div class="selected-users">
                <h4>Selected Members</h4>
                <div id="selected-users-list" class="users-list"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button id="cancel-channel-btn" class="btn-secondary">Cancel</button>
          <button id="create-channel-btn" class="btn-primary">Create Channel</button>
        </div>
      </div>
    </div>

    <!-- Channel Invitation Notification -->
    <div id="invitation-notification" class="notification" style="display: none;">
      <div class="notification-content">
        <p id="invitation-message"></p>
        <div class="notification-buttons">
          <button id="accept-invitation-btn" class="btn-primary">Accept</button>
          <button id="decline-invitation-btn" class="btn-secondary">Decline</button>
        </div>
      </div>
    </div>

  </body>
</html>